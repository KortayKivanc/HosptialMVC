@model HospitalMVC.Models.PatientPageViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .table-wrap {
            height: 30vh;
            max-width: 700px;
            overflow-x: auto;
            border: 1px solid #000;
            border-radius: 8px;        
            text-overflow: ellipsis;  
        }
    
       .table td {
          padding: .25rem .5rem;
          border: 1px solid #000;
          vertical-align: top;
          overflow: hidden;          
          text-overflow: ellipsis;    
          white-space: nowrap;        
          font-size: 0.9rem;         
        }
    
        .table th,
        .table td {
            padding: .5rem .75rem;
            border: 1px solid #000;
            vertical-align: top;
            overflow-wrap: anywhere;
            word-break: break-word;
        }
    
        .table th {
            position: sticky;
            top: 0;
            background: #fff;
            z-index: 1;
        }
    
        .col-test {
            width: 40%;
        }
    
        .col-result {
            width: 60%;
        }
    
        .table-body {
            display: block;
            max-height: 50vh;
            overflow-y: auto;
        }
    
        .table thead,
        .table tbody tr {
            display: table;
            width: 100%;
            table-layout: fixed;
        }
    </style>
</head>
<body >
    <div style="display: flex; flex-direction: column;">
        <div style="height: 30vh; margin-top: 10vh; background-color: slateblue; ">
            <div style="display: flex;">
                <div style="width: 30vh; background-color: orange; height: 30vh; display: flex; flex-direction: column;">
                    <label for="patientName" style="margin-top: 3vh; margin-left: 3vh; font-size: 3vh;"> @Model.PatientName </label>
                    <label for="patientMail" style="margin-top: 3vh; margin-left: 3vh; font-size: 3vh;"> @Model.PatientEmail </label>
                    <label for="patientRole" style="margin-top: 3vh; margin-left: 3vh; font-size: 3vh;"> @Model.PatientRole </label>
                    
                </div>
                <div class="table-wrap">
                    <table class="table">
                        <thead>
                            <tr style="font-size: 4vh; ">
                                <th style="width: 40%;">Test</th>
                                <th>Result</th>
                            </tr>
                        </thead>
                        
                        <tbody class="table-body">
                            @foreach (var item in Model.Tests)
                            {
                                <tr>
                                    <td style="width:40%;">@item.TestName</td>
                                    <td>@item.Results</td>
                                </tr>
                            }
                            @if (Model.Tests == null || !Model.Tests.Any())
                            {
                                <tr><td colspan="2">No tests yet.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>