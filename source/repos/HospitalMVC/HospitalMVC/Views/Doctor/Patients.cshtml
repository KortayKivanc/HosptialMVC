@model HospitalMVC.Models.DoctorPageViewModel
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font: 14px/1.4 "Segoe UI", sans-serif;
            color: #222;
            background: rgb(236,232,240);
            margin: 0;
        }

        .wrap {
            display: flex;
            flex-direction: column;
            padding: 10px;
        }

        .row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
        }

        .card {
            background: #fff;
            border: 1px solid #000;
            border-radius: 8px;
            padding: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #aaa;
            padding: 6px;
            text-align: left;
        }

        th {
            background: #eee;
        }

        .muted {
            color: #666;
            font-style: italic;
        }

        .actions {
            display: flex;
            gap: 8px;
        }

        .btn {
            display: inline-block;
            padding: 6px 10px;
            border: 1px solid #444;
            border-radius: 6px;
            background: #f7f7f7;
            text-decoration: none;
            color: #222;
        }
    </style>
</head>
<body>
    <div class="wrap">
        <div class="row">
            <div class="card">
                <h3>Patients</h3>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.Patients)
                        {
                            <tr>
                                <td>@p.Id</td>
                                <td>@p.Name</td>
                                <td>
                                    <a class="btn"
                                       asp-controller="Doctor" asp-action="Orders"
                                       asp-route-patientId="@p.Id">
                                        View Orders
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.Patients.Any())
                        {
                            <tr><td colspan="3" class="muted">No patients.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card">
                <h3>All Reports</h3>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.AllOrders)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.PatientId</td>
                                <td>@r.TestName</td>
                            </tr>
                        }
                        @if (!Model.AllOrders.Any())
                        {
                            <tr><td colspan="3" class="muted">No reports.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card">
        <h3>Selected Patient Reports</h3>
        @if (Model.SelectedPatientId == null)
            {
                <p class="muted">Pick a paitent</p>
            }
            else
            {
                <p><strong>@Model.SelectedPatientName</strong> (ID: @Model.SelectedPatientId)</p>
            <table>
                <thead>
                    <tr><th>ID</th><th>Test</th><th>Result</th></tr>
                </thead>
                <tbody>
                    @foreach (var rr in Model.SelectedPatientOrders)
                    {
                        <tr>
                            <td>@rr.Id</td>
                            <td>@rr.TestName</td>
                            <td>@rr.Results</td>
                        </tr>
                    }
                    @if (!Model.SelectedPatientOrders.Any())
                    {
                        <tr><td colspan="3" class="muted">No tests yet.</td></tr>
                    }
                </tbody>
            </table>
            <h4 style="margin-top:12px;">Add New Test</h4>
            <form asp-action="CreateOrder" asp-controller="Doctor" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="AddOrder.PatientId" value="@Model.SelectedPatientId" />
                <div>
                    <label>Test Title:</label>
                    <input asp-for="AddOrder.TestName" placeholder="Blood Test" />
                </div>
                <div>
                    <label>Result:</label>
                    <input asp-for="AddOrder.Results" placeholder="Result details" />
                </div>
                <div style="margin-top:10px;">
                    <button type="submit" class="btn">Send</button>
                    <a class="btn" asp-controller="Doctor" asp-action="Patients">Clear</a>
                </div>
            </form>
        }
    </div>
    
    

</body>
</html>